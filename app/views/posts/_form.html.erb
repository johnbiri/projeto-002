<%= form_with model: post, local: true do |form| %>
  <div class="form-group text-white">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control bg-transparent text-white', required: true, placeholder: 'TÃ­tulo do artigo' %>
  </div>

  <div class="form-group text-white">
    <%= form.label :author, class: 'form-label' %>
    <%= form.text_field :author, class: 'form-control bg-transparent text-white', required: true, placeholder: 'Nome do autor' %>
  </div>

  <div class="form-group text-white">
    <%= form.label :body, class: 'form-label' %>
    <%= form.text_area :body, class: 'form-control bg-transparent text-white', rows: 15, required: true, placeholder: 'Escreva seu artigo aqui...' %>
  </div>

  <div class="form-group text-center">
    <%= form.submit 'Salvar Post', class: 'btn btn-primary' %>
  </div>
<% end %>
