<%= form_with model: post, local: true do |form| %>
  <div class="form-group text-white">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', style: "background-color: #000; color: white" %>
  </div>

  <div class="form-group text-white">
    <%= form.label :author %>
    <%= form.text_field :author, class: 'form-control', style: "background-color: #000; color: white" %>
  </div>

  <div class="form-group text-white">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 15, style: "background-color: #000; color: white" %>
  </div>

  <%= form.submit class: 'btn btn-primary', data: { disable_with: 'Criando...' } %>
<% end %>
